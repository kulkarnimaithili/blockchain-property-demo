<link rel="stylesheet" type="text/css" href="css/sales.css">
<div id="sales">
  <div class="container"  style="margin-top:5%;">
  <div class="row" style="background:#c1c1ff !important">
    <div id="salesinner">
      <form id="form-sales">
        <div class="col-sm-12 form-group" style="padding-top:3%;">
          <div id="salesinner">
            <div class="col-sm-6 form-group hidden">
              <label for="usr">Government Official: </label>
              <br>
              <select class="form-control" id="buyFrom" value="--Buy From--" style="width:100%;">
                <option value="">Delhi </option>
                {{#each owners}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
            <div class="col-sm-1 form-group hidden">
              <label for="usr">Area:</label>
              <input type="text" class="form-control" id="areaField" name="Area" disabled="disabled">
            </div>
			
			<div class="col-sm-6 form-group">
              <label for="usr">City: </label>
              <br>
              <select class="form-control" id="sellTo" value="--Select Buyer--" style="width:100%;">
                <option value="">Select City </option>
                {{#each owners}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
			
            <div class="col-sm-6 form-group">
              <label for="usr">Loyalty Points: </label>
              <br>
              <select id="survey" class="form-control" value="--Buy From--" style="width:100%">
                <option value="">Select Loyalty Points</option>
				<option value="">10</option>
				<option value="">30</option>
				<option value="">50</option>
				<option value="">100</option>
              </select>
            </div>
            <div class="col-sm-6 form-group hidden">
              <label for="Address">Address:</label>
              <textarea class="form-control" id="addressField" name="Address" disabled="disabled"></textarea>
            </div>
            <br>
            <div class="col-xs-12" size="2" hidden>
              <hr>
            </div>
            
            <div class="col-sm-5"></div>
            <div class="col-sm-2 form-group button-register">
              <input type="submit" id="buyButton" class="btn btn-default" value="GRANT" />
            </div>
            <div id="blockDetails" class="col-sm-12">
              <br>
              <div class="alert alert-info alert-dismissable">
                <a id="result" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
                <strong>
                  <center>Loyalty Points have been granted !!</center>
                </strong>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>


